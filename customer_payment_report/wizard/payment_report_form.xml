<odoo>
    <!--     record for the wizard of report -->
    <record id="payment_report_wizard_form" model="ir.ui.view">
        <field name="name">payment.report.wizard.form</field>
        <field name="model">payment.report</field>
        <field name="arch" type="xml">
            <form string="Customer Payment Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button name="action_print_report" string="Print PDF" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>